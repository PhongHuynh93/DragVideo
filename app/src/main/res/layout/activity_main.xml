    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mainRcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--fixme replace with fragment-->
    <com.example.cpu11112_local.testdragvideo.DragVideoView
        android:id="@+id/dragVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.cpu11112_local.testdragvideo.test.MvImageView
            android:id="@+id/videoView"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/videoInfoRcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.example.cpu11112_local.testdragvideo.DragVideoView>
